
<div id="gallery">
    <h2> All Images</h2>
    <% if @images.exists? %>
      <% @images.each_slice(4) do |image| %>
        <div class="row">
          <% image.each do |image| %>
            <div class="col-md-3">
              <div class="photo photo-type-line">
                <a href="<%= image.image_url() %>" rel="lightbox" class="photo-hover" reldata-lightbox="my-images" data-title="<%= image.image_title %>">
                  <div class="photo-info">
                    <div class="headline"><%= image.image_title %></div>
                    <div class="line"></div>
                    <div class="desc"><%= image.image_description %></div>
                  </div>
                  <div class="mask"></div>
                </a>
                <div class="photo-img"><img src="<%= image.image_url(:thumb) %>"></div>
              </div>
            </div>
          <% end %>
      </div>
    <% end %>
    <% else %><p>There are no images.</p>
  <% end %>
</div>
    
    
    
    
 

